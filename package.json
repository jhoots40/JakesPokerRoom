{
  "name": "mernboilerplate",
  "version": "1.0.5",
  "engines": {
    "node": "18.x",
    "yarn": "1.x"
  },
  "description": "This is a boilerplate repo for creating new mern stack apps",
  "main": "server.js",
  "scripts": {
    "test": "jest",
    "start": "node server/server.js",
    "dev": "concurrently -n 'redis,nodejs' -c 'red,green' \"redis-server\" \"nodemon server/server.js\"",
    "client": "cd client && yarn start",
    "mern": "concurrently -n 'server,client' -c 'yellow,blue' \"yarn run dev\" \"yarn run client\"",
    "heroku-postbuild": "cd client && yarn install && yarn run build"
  },
  "author": "Gaurav Walia",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.3.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mocha": "^10.2.0",
    "mongoose": "^6.9.1",
    "redis": "^4.6.12",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "dotenv": "^16.3.1",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.3"
  }
}
